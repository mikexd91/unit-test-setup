pipeline {
	agent any

	stages {

		stage ("Setup NodeJS") {
			steps {
				nodejs(configId: '08136756-fa8c-4f4c-9bb1-516707682c34', nodeJSInstallationName: 'Node v6.10.3 - install automatically') {
				    sh 'node --version';
				}
			}
		}
		
		stage ("install") {
			steps {
				echo "Install";
			}
		}

		stage ("Tests") {
			steps {
				parallel (

					eslint: {
						echo "eslint";
					},

					karma: {
						echo "karma";
					}

				)
			}
		}

		stage ("checkstyle") {
			steps {
				echo "Checkstyle";
			}
		}



	}
}